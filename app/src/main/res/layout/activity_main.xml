<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="io.github.naveen246.calendarscroller.MainActivity"
    >

  <io.github.naveen246.calendarscroller.lib.CalendarScroller
      android:id="@+id/layout_calendar"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:dayTextColor="@android:color/white"
      app:daysContainerBackgroundColor="@color/cardview_dark_background"
      app:monthYearTextColor="@android:color/white"
      app:selectedDayTextColor="@android:color/holo_red_dark"
      >

  </io.github.naveen246.calendarscroller.lib.CalendarScroller>
</RelativeLayout>
